generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Seat {
  id        String   @id @default(cuid()) @map("_id")
  tableId   String
  table     Table    @relation(fields: [tableId], references: [id])
  seat      Int
  isBooked  Boolean
  user      Users?   @relation(fields: [userId], references: [id])
  userId    String?
}

model Users {
  id        String   @id @default(cuid()) @map("_id")
  firstname String
  lastname  String
  seat      Seat[]
}

model Table {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  Seat      Seat[]
}